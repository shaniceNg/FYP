<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#E8E8E8"

    android:id="@+id/exercise_layout"
    tools:context=".ExerciseFragment">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activity"
        android:textSize="30sp"
        android:layout_marginTop="30dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ActivityConstraintLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="54dp"
        android:background="#E8E8E8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <Button
            android:id="@+id/btnWalking"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/round"
            android:backgroundTint="#B7BFD5"
            android:drawableTop="@drawable/ic_icon_awesome_walking"
            android:padding="10dp"
            android:text="Walking"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnJogging"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginStart="40dp"
            android:background="@drawable/round"
            android:backgroundTint="#B7BFD5"
            android:drawableTop="@drawable/ic_icon_awesome_walking"
            android:padding="10dp"
            android:text="Jogging"
            app:layout_constraintStart_toEndOf="@+id/btnWalking"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnRunning"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/round"
            android:backgroundTint="#B7BFD5"
            android:drawableTop="@drawable/ic_icon_awesome_walking"
            android:padding="10dp"
            android:text="Running"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnWalking" />

        <Button
            android:id="@+id/btnTaiChi"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/round"
            android:backgroundTint="#B7BFD5"
            android:drawableTop="@drawable/ic_icon_awesome_walking"
            android:padding="10dp"
            android:text="Tai Chi"
            app:layout_constraintStart_toEndOf="@+id/btnRunning"
            app:layout_constraintTop_toBottomOf="@+id/btnJogging" />

        <Button
            android:id="@+id/btnYoga"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/round"
            android:backgroundTint="#B7BFD5"
            android:drawableTop="@drawable/ic_icon_awesome_walking"
            android:padding="10dp"
            android:text="Yoga"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnRunning" />

        <Button
            android:id="@+id/btnZumba"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/round"
            android:backgroundTint="#B7BFD5"
            android:drawableTop="@drawable/ic_icon_awesome_walking"
            android:padding="10dp"
            android:text="Zumba"
            app:layout_constraintStart_toEndOf="@+id/btnYoga"
            app:layout_constraintTop_toBottomOf="@+id/btnTaiChi" />

        <Button
            android:id="@+id/btnStrength"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/round"
            android:backgroundTint="#B7BFD5"
            android:drawableTop="@drawable/ic_icon_awesome_walking"
            android:padding="10dp"
            android:text="Strength-training"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnYoga" />

        <Button
            android:id="@+id/btnOthers"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/round"
            android:backgroundTint="#B7BFD5"
            android:drawableTop="@drawable/ic_icon_awesome_walking"
            android:padding="10dp"
            android:text="Others"
            app:layout_constraintStart_toEndOf="@+id/btnStrength"
            app:layout_constraintTop_toBottomOf="@+id/btnZumba" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/backbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>