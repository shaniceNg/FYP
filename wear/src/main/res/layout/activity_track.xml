<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="@dimen/box_inset_layout_padding"
    tools:context=".TrackActivity"
    tools:deviceIds="wear"
    android:paddingTop="32dp"
    android:paddingBottom="32dp"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="32dp"
            android:text="@string/title_activity_track" />

        <Button
            android:id="@+id/btnWBriskWalking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Brisk Walking" />

        <Button
            android:id="@+id/btnWJogging"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jogging" />

        <Button
            android:id="@+id/btnWRunning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Running" />

        <Button
            android:id="@+id/btnWTaichi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tai Chi" />

        <Button
            android:id="@+id/btnWYoga"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Yoga" />

        <Button
            android:id="@+id/btnWZumba"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Zumba" />

        <Button
            android:id="@+id/btnWSwimming"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Swimming" />

        <Button
            android:id="@+id/btnWSports"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sports (Please Specify)" />

        <Button
            android:id="@+id/btnWStrength"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Strength Training" />

        <Button
            android:id="@+id/btnWOthers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:text="Others (Please Specify)" />
    </LinearLayout>
        </ScrollView>
